<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9dbdba</item>
        <item name="colorPrimaryDark">#9dbdba</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">#BDFEBE</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">#FFF6F4</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
